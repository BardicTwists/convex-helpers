{
  "name": "convex-helpers",
  "version": "0.1.27",
  "description": "A collection of useful code to complement the official convex package.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./index.ts",
      "default": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "development": "./testing.ts",
      "default": "./dist/testing.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts",
      "development": "./validators.ts",
      "default": "./dist/validators.js"
    },
    "./react/sessions": {
      "types": "./dist/react/sessions.d.ts",
      "development": "./react/sessions.ts",
      "default": "./dist/react/sessions.js"
    },
    "./server/customFunctions": {
      "types": "./dist/server/customFunctions.d.ts",
      "development": "./server/customFunctions.ts",
      "default": "./dist/server/customFunctions.js"
    },
    "./server/filter": {
      "types": "./dist/server/filter.d.ts",
      "development": "./server/filter.ts",
      "default": "./dist/server/filter.js"
    },
    "./server/hono": {
      "types": "./dist/server/hono.d.ts",
      "development": "./server/hono.ts",
      "default": "./dist/server/hono.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "development": "./server/index.ts",
      "default": "./dist/server/index.js"
    },
    "./server/relationships": {
      "types": "./dist/server/relationships.d.ts",
      "development": "./server/relationships.ts",
      "default": "./dist/server/relationships.js"
    },
    "./server/retries": {
      "types": "./dist/server/retries.d.ts",
      "development": "./server/retries.ts",
      "default": "./dist/server/retries.js"
    },
    "./server/rowLevelSecurity": {
      "types": "./dist/server/rowLevelSecurity.d.ts",
      "development": "./server/rowLevelSecurity.ts",
      "default": "./dist/server/rowLevelSecurity.js"
    },
    "./server/sessions": {
      "types": "./dist/server/sessions.d.ts",
      "development": "./server/sessions.ts",
      "default": "./dist/server/sessions.js"
    },
    "./server/zod": {
      "types": "./dist/server/zod.d.ts",
      "development": "./server/zod.ts",
      "default": "./dist/server/zod.js"
    }
  },
  "files": [
    "dist",
    "index.ts",
    "react",
    "server",
    "testing.ts",
    "validators.ts"
  ],
  "scripts": {
    "build": "node generate-exports.mjs && tsc",
    "prebuild": "npm run test",
    "test": "tsc --project tsconfig.test.json",
    "clean": "rm -rf dist",
    "watch": "chokidar '*.ts' 'server/*.ts' 'react/*.ts' 'tsconfig*.json' 'package.json' -c 'npm run build' --initial",
    "arethetypeswrong": "npx attw $(npm pack)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/get-convex/convex-helpers.git",
    "directory": "packages/convex-helpers"
  },
  "keywords": [
    "convex",
    "database",
    "react"
  ],
  "author": "Ian Macartney <ian@convex.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/get-convex/convex-helpers/issues"
  },
  "homepage": "https://github.com/get-convex/convex-helpers/tree/main/packages/convex-helpers/README.md",
  "peerDependencies": {
    "convex": "^1.10.0",
    "hono": "^4.0.5",
    "react": "^17.0.2 || ^18.0.0",
    "zod": "^3.22.4"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3"
  },
  "dependencies": {
    "@arethetypeswrong/cli": "^0.15.2"
  }
}
